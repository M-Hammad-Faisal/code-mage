{
  "name": "code-mage",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm-run-all clean prettier:check lint build:tsc lighthouse proof",
    "prepare": "husky",
    "build:tsc": "tsc -b && vite build",
    "clean": "rimraf .eslint .coverage lib .tsbuildinfo",
    "lint": "npm-run-all lint:eslint",
    "lint:eslint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:eslint:report": "eslint --output-file=.eslint/index.html --format=html .",
    "preview": "vite preview",
    "prettier:check": "prettier --check --no-editorconfig --ignore-unknown .",
    "prettier:write": "prettier --write --no-editorconfig --ignore-unknown .",
    "lighthouse": "npx lhci autorun",
    "proof": "git rev-parse HEAD | cowsay -r"
  },
  "dependencies": {
    "@mdx-js/react": "^3.1.1",
    "@mdx-js/rollup": "^3.1.1",
    "@types/prismjs": "^1.26.5",
    "@types/react-syntax-highlighter": "^15.5.13",
    "autoprefixer": "^10.4.21",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.546.0",
    "postcss": "^8.5.6",
    "prismjs": "^1.30.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.9.4",
    "react-syntax-highlighter": "^15.6.6",
    "rehype-highlight": "^7.0.2",
    "rehype-prism-plus": "^2.0.1",
    "remark-gfm": "^4.0.1",
    "tailwindcss": "^4.1.14"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@lhci/cli": "^0.15.1",
    "@tailwindcss/postcss": "^4.1.14",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^24.7.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.0.4",
    "cowsay": "^1.6.0",
    "eslint": "^9.36.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-perfectionist": "^4.15.1",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
